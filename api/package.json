{
  "name": "express-typescript-starter",
  "version": "0.1.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "repository": {
    "type": "git"
  },
  "author": "Bowden Kelly",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/server.ts",
    "start:dev": "nodemon",
    "build": "tsc",
    "watch-ts": "tsc -w",
    "test": "jest --watchAll --detectOpenHandles",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/lusca": "^1.7.0",
    "@types/mongoose": "^5.11.97",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-session": "^1.17.3",
    "http-proxy-middleware": "^2.0.6",
    "husky": "^4.2.3",
    "jest": "^28.1.3",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.0.8",
    "lodash": "^4.17.15",
    "lusca": "^1.7.0",
    "mongodb": "^4.10.0",
    "mongodb-memory-server": "^8.8.0",
    "mongoose": "^6.6.1",
    "passport": "^0.6.0",
    "ts-jest": "^28.0.7",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/errorhandler": "^0.0.32",
    "@types/eslint": "^6.1.8",
    "@types/express": "^4.17.2",
    "@types/express-session": "^1.17.5",
    "@types/jest": "^28.1.6",
    "@types/lodash": "^4.14.149",
    "@types/node": "^18.7.5",
    "@types/node-sass": "^4.11.0",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.2",
    "@types/superagent": "^4.1.15",
    "@types/supertest": "^2.0.12",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "nodemon": "^2.0.19",
    "supertest": "^6.2.4",
    "ts-node": "^8.6.2",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "eslint --fix"
    ]
  }
}
