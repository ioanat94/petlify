{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "files": true
  },
  "files": [
    "global.d.ts"
  ],
  "exclude": [
    "*.test.ts",
    "*.fixture.ts",
    "db-helper.ts"
  ]
}